@page "/users"
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@using ConsumoAPI2.Wasm.Models

<PageTitle>Gesti√≥n de Usuarios</PageTitle>

<div class="container">
    <h1 class="title">üë• Gesti√≥n de Usuarios</h1>

    @if (showForm)
    {
        <div class="user-form">
            <h3>@(editingUser?.Id > 0 ? "‚úèÔ∏è Editar Usuario" : "‚ûï Nuevo Usuario")</h3>
            <div class="form-group">
                <label>Nombre:</label>
                <input @bind="currentUser.Name" class="form-control" placeholder="Ingrese el nombre" />
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input @bind="currentUser.Email" type="email" class="form-control" placeholder="correo@ejemplo.com" />
            </div>
            <div class="form-group">
                <label>Rol:</label>
                <input @bind="currentUser.Role" class="form-control" placeholder="Ej: Admin, Usuario, etc." />
            </div>
            <div class="form-actions">
                <button @onclick="SaveUser" class="btn btn-primary">üíæ Guardar</button>
                <button @onclick="CancelEdit" class="btn btn-secondary">‚ùå Cancelar</button>
            </div>
        </div>
    }
    else
    {
        <button @onclick="ShowCreateForm" class="btn btn-success mb-3">‚ûï Agregar Usuario</button>
    }

    @if (loading)
    {
        <div class="loading">‚è≥ Cargando usuarios...</div>
    }
    else if (users == null || !users.Any())
    {
        <div class="empty-state">
            <p>üì≠ No hay usuarios registrados</p>
        </div>
    }
    else
    {
        <div class="users-grid">
            @foreach (var user in users)
            {
                <div class="user-card">
                    <div class="user-header">
                        <h4>@user.Name</h4>
                        <span class="user-role">@user.Role</span>
                    </div>
                    <div class="user-info">
                        <p>üìß @user.Email</p>
                        <p class="user-date">üìÖ Creado: @user.CreatedDate.ToString("dd/MM/yyyy")</p>
                    </div>
                    <div class="user-actions">
                        <button @onclick="() => EditUser(user)" class="btn btn-edit">‚úèÔ∏è Editar</button>
                        <button @onclick="() => DeleteUser(user.Id)" class="btn btn-delete">üóëÔ∏è Eliminar</button>
                    </div>
                </div>
            }
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-error">‚ö†Ô∏è @errorMessage</div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success">‚úÖ @successMessage</div>
    }
</div>

@code {
    private List<User>? users;
    private User currentUser = new User();
    private User? editingUser = null;
    private bool showForm = false;
    private bool loading = true;
    private string errorMessage = "";
    private string successMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        try
        {
            loading = true;
            errorMessage = "";
            users = await Http.GetFromJsonAsync<List<User>>("api/users");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar usuarios: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private void ShowCreateForm()
    {
        currentUser = new User();
        editingUser = null;
        showForm = true;
        errorMessage = "";
        successMessage = "";
    }

    private void EditUser(User user)
    {
        editingUser = user;
        currentUser = new User
        {
            Id = user.Id,
            Name = user.Name,
            Email = user.Email,
            Role = user.Role
        };
        showForm = true;
        errorMessage = "";
        successMessage = "";
    }

    private void CancelEdit()
    {
        showForm = false;
        currentUser = new User();
        editingUser = null;
        errorMessage = "";
        successMessage = "";
    }

    private async Task SaveUser()
    {
        try
        {
            errorMessage = "";
            successMessage = "";

            if (string.IsNullOrWhiteSpace(currentUser.Name) || string.IsNullOrWhiteSpace(currentUser.Email))
            {
                errorMessage = "El nombre y el email son obligatorios";
                return;
            }

            if (editingUser?.Id > 0)
            {
                // Actualizar
                var response = await Http.PutAsJsonAsync($"api/users/{currentUser.Id}", currentUser);
                if (response.IsSuccessStatusCode)
                {
                    successMessage = "Usuario actualizado correctamente";
                }
                else
                {
                    errorMessage = "Error al actualizar el usuario";
                }
            }
            else
            {
                // Crear
                var response = await Http.PostAsJsonAsync("api/users", currentUser);
                if (response.IsSuccessStatusCode)
                {
                    successMessage = "Usuario creado correctamente";
                }
                else
                {
                    errorMessage = "Error al crear el usuario";
                }
            }

            await LoadUsers();
            CancelEdit();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    private async Task DeleteUser(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "¬øEst√° seguro de eliminar este usuario?"))
            return;

        try
        {
            errorMessage = "";
            successMessage = "";

            var response = await Http.DeleteAsync($"api/users/{id}");
            if (response.IsSuccessStatusCode)
            {
                successMessage = "Usuario eliminado correctamente";
                await LoadUsers();
            }
            else
            {
                errorMessage = "Error al eliminar el usuario";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }
}

