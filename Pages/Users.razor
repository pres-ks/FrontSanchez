@page "/users"
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@using ConsumoAPI2.Wasm.Models

<PageTitle>Gesti√≥n de Usuarios</PageTitle>

<div class="page-container animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 fw-bold m-0">üë• Gesti√≥n de Usuarios</h1>
        @if (!showForm)
        {
            <button @onclick="ShowCreateForm" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Nuevo Usuario
            </button>
        }
    </div>

    @if (showForm)
    {
        <div class="card glass-panel mb-4 animate-fade-in">
            <h3 class="h4 mb-4">@(editingUser?.Id > 0 ? "‚úèÔ∏è Editar Usuario" : "‚ûï Nuevo Usuario")</h3>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Nombre</label>
                    <input @bind="currentUser.Name" class="form-control" placeholder="Ingrese el nombre" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input @bind="currentUser.Email" type="email" class="form-control" placeholder="correo@ejemplo.com" />
                </div>
                <div class="col-md-12">
                    <label class="form-label">Rol</label>
                    <input @bind="currentUser.Role" class="form-control" placeholder="Ej: Admin, Usuario, etc." />
                </div>
            </div>
            <div class="d-flex gap-2 mt-4">
                <button @onclick="SaveUser" class="btn btn-primary">üíæ Guardar</button>
                <button @onclick="CancelEdit" class="btn btn-secondary">‚ùå Cancelar</button>
            </div>
        </div>
    }

    @if (loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-3 text-muted">Cargando usuarios...</p>
        </div>
    }
    else if (users == null || !users.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-inbox display-1 mb-3 d-block"></i>
            <p class="lead">No hay usuarios registrados</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var user in users)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 glass-panel">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h4 class="h5 fw-bold mb-1">@user.Name</h4>
                                <span class="badge bg-primary bg-opacity-25 text-primary">@user.Role</span>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <div class="d-flex align-items-center text-muted mb-2">
                                <i class="bi bi-envelope me-2"></i>
                                <span>@user.Email</span>
                            </div>
                            <div class="d-flex align-items-center text-muted">
                                <i class="bi bi-calendar me-2"></i>
                                <small>Creado: @user.CreatedDate.ToString("dd/MM/yyyy")</small>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-auto">
                            <button @onclick="() => EditUser(user)" class="btn btn-sm btn-secondary flex-grow-1">
                                ‚úèÔ∏è Editar
                            </button>
                            <button @onclick="() => DeleteUser(user.Id)" class="btn btn-sm btn-danger flex-grow-1">
                                üóëÔ∏è Eliminar
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger mt-4 animate-fade-in">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success mt-4 animate-fade-in">
            <i class="bi bi-check-circle-fill me-2"></i> @successMessage
        </div>
    }
</div>

@code {
    private List<User>? users;
    private User currentUser = new User();
    private User? editingUser = null;
    private bool showForm = false;
    private bool loading = true;
    private string errorMessage = "";
    private string successMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        try
        {
            loading = true;
            errorMessage = "";
            users = await Http.GetFromJsonAsync<List<User>>("api/users");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar usuarios: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private void ShowCreateForm()
    {
        currentUser = new User();
        editingUser = null;
        showForm = true;
        errorMessage = "";
        successMessage = "";
    }

    private void EditUser(User user)
    {
        editingUser = user;
        currentUser = new User
        {
            Id = user.Id,
            Name = user.Name,
            Email = user.Email,
            Role = user.Role
        };
        showForm = true;
        errorMessage = "";
        successMessage = "";
    }

    private void CancelEdit()
    {
        showForm = false;
        currentUser = new User();
        editingUser = null;
        errorMessage = "";
        successMessage = "";
    }

    private async Task SaveUser()
    {
        try
        {
            errorMessage = "";
            successMessage = "";

            if (string.IsNullOrWhiteSpace(currentUser.Name) || string.IsNullOrWhiteSpace(currentUser.Email))
            {
                errorMessage = "El nombre y el email son obligatorios";
                return;
            }

            if (editingUser?.Id > 0)
            {
                // Actualizar
                var response = await Http.PutAsJsonAsync($"api/users/{currentUser.Id}", currentUser);
                if (response.IsSuccessStatusCode)
                {
                    successMessage = "Usuario actualizado correctamente";
                }
                else
                {
                    errorMessage = "Error al actualizar el usuario";
                }
            }
            else
            {
                // Crear
                var response = await Http.PostAsJsonAsync("api/users", currentUser);
                if (response.IsSuccessStatusCode)
                {
                    successMessage = "Usuario creado correctamente";
                }
                else
                {
                    errorMessage = "Error al crear el usuario";
                }
            }

            await LoadUsers();
            CancelEdit();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    private async Task DeleteUser(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "¬øEst√° seguro de eliminar este usuario?"))
            return;

        try
        {
            errorMessage = "";
            successMessage = "";

            var response = await Http.DeleteAsync($"api/users/{id}");
            if (response.IsSuccessStatusCode)
            {
                successMessage = "Usuario eliminado correctamente";
                await LoadUsers();
            }
            else
            {
                errorMessage = "Error al eliminar el usuario";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }
}
